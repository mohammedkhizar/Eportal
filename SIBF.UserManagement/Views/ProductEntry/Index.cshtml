@model SIBF.UserManagement.Models.ProductEntryModel
@{
    ViewBag.Title = "Where House";
}

<div class="container">
    <div class="row">
        <h2>Create Where House</h2>
        @if (ViewBag.SuccessMsg != null)
        {
            <p class="text-info">@ViewBag.SuccessMsg</p>
        }
        else if (ViewBag.Failuremessage != null)
        {
            <p class="text-danger">@ViewBag.Failuremessage</p>
        }
        <hr />
        <div class="col-lg-6">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                  
                   
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.FormSubmit.StoreName, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.FormSubmit.StoreName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FormSubmit.StoreName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.FormSubmit.StoreType, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.FormSubmit.StoreType, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FormSubmit.StoreType, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.FormSubmit.StoreRoomNumber, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.FormSubmit.StoreRoomNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FormSubmit.StoreRoomNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.FormSubmit.StoreManager, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.FormSubmit.StoreManager, new SelectList(ViewBag.UsersInfo, "Username", "Username"), new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            @Html.HiddenFor(model => model.FormSubmit.StoreID)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-8">
                            <input type="submit" id="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
</div>
        <div class="col-lg-6">
            <p class="alert-info" id="deleteMsg"></p>
            @using (Html.BeginForm())
            {

                <table class="table table-responsive table-bordered table-striped" style="background-color:#fff;">
                    <tr>
                        <th style="text-align: center;">
                            Store
                        </th>
                        <th style="text-align: center;">StoreType</th>
                        <th style="text-align: center;">
                            StoreRoomNumber
                        </th>
                        <th style="text-align: center;">
                            StoreManager
                        </th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>

                    @foreach (var item in Model.Display.StoreData)
                    {
                        <tr id="row_@item.StoreID">
                            <td id="itemname_@item.StoreID">
                               @Html.DisplayFor(modelItem => item.StoreName)
                            </td>
                            <td id="storetype_@item.StoreID">
                                @Html.DisplayFor(modelItem => item.StoreType)
                            </td>
                            <td id="storeroomnumber_@item.StoreID">
                                @Html.DisplayFor(modelItem => item.StoreRoomNumber)
                            </td>
                            <td id="storemanager_@item.StoreID">
                                @Html.DisplayFor(modelItem => item.StoreManager)
                            </td>
                            <td>
                                <a href="#" class="editElementByIdFromTable" id="edit_@item.StoreID">
                                    <img src="@Url.Content("~/Content/Images/edit.ico")" , alt="Delete" />
                                </a>
                            </td>
                            <td class="text-center">
                                <a href="#" class="deleteElement" id="@item.StoreID">
                                    <img src="@Url.Content("~/Content/Images/delete.ico")" , alt="Delete" />
                                </a>
                            </td>
                        </tr>
                    }
                </table>
                <br />

            }
        </div>
</div>
</div>

    <script>
    $(document).ready(function () {
        $("#FormSubmit_StoreID").val('0');
        $(".deleteElement").click(function () {
            selRow = this.id;
            seletedElementData=$.trim($("#itemname_"+selRow).html());
            resultClick = confirm("You are sure you want to delete : " +seletedElementData);
            if (resultClick == true) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DeleteWhareHouse")',
                    dataType: 'json',
                    data: {
                        id: selRow
                    },
                    success: function (data) {
                        if (data == true) {
                            setRowSeleted = "#row_" + selRow;
                            $(setRowSeleted).remove();
                            $("#deleteMsg").html('Delete successfully');
                        }
                        else {
                            $("#deleteMsg").html('Delete is not possiable as it dependent products');
