        });


        $(".editElementByIdFromTable").click(function () {
            selRow = this.id;
            var selRow = selRow.split("_");
            seletedName = $.trim($("#itemname_" + selRow[1]).html());
            resultClick = confirm("You are sure you want to edit : " + seletedName);

            seletedSType = $.trim($("#storetype_" + selRow[1]).html());
            seletedSRNumber = $.trim($("#storeroomnumber_" + selRow[1]).html());
            seletedSManager = $.trim($("#storemanager_" + selRow[1]).html());
            $("#FormSubmit_StoreID").val(selRow[1]);
            $("#FormSubmit_StoreName").val(seletedName);
            $("#FormSubmit_StoreType").val(seletedSType);
            $("#FormSubmit_StoreRoomNumber").val(seletedSRNumber);
            $("#FormSubmit_StoreManager").prepend("<option value='" + seletedSManager + "'>" + seletedSManager + "</option>").val(seletedSManager);
            $("#submit").val("Edit");
        });


